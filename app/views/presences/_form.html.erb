<%= form_for @presence do |f| %>
  <% if @presence.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@presence.errors.count, "error") %> prohibited
      this user from being saved:</h2>
    <ul>
    <% @presence.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :user_id %><br>
    <%= f.select(:user_id, @users.collect {|p| [ p.first_name + " " + p.second_name, p.id ] }) %>
  </p>

  <p>
    <%= f.label :event_id %><br>
    <%= f.select(:event_id, @events.collect {|p| [ p.title, p.id ] }) %>
  </p>

  <p>
    <%= f.label :presence %><br>
    <%= check_box("presence", "presence") %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
